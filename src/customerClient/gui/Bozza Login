import java.awt.*;
import javax.swing.*;


    class ImageTest {

        public static void main(String[] args) {

            // permette di avere la finestra in Modalità Full Screen

            /* GraphicsEnvironment ge = GraphicsEnvironment.getLocalGraphicsEnvironment();
